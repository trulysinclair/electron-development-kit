{
  "name": "@electron-development-kit/monorepo",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo build",
    "clean": "turbo clean",
    "dev": "turbo dev",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "turbo lint",
    "postinstall": "husky",
    "test": "turbo test",
    "type-check": "turbo type-check"
  },
  "engines": {
    "node": ">=20"
  },
  "packageManager": "yarn@4.4.1",
  "workspaces": [
    "apps/*",
    "packages/*",
    "shared/*"
  ],
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "auto-changelog": "^2.4.0",
    "husky": "^9.0.11",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "turbo": "^2.1.1"
  }
}
