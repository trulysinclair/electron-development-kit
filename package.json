{
  "name": "@electron-development-kit/monorepo",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "clean": "turbo clean",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "engines": {
    "node": ">=20"
  },
  "packageManager": "yarn@4.4.1",
  "workspaces": [
    "apps/*",
    "packages/*",
    "shared/*"
  ],
  "devDependencies": {
    "electron": "^32.0.1",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "turbo": "^2.1.1"
  }
}
